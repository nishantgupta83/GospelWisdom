# ==================================================
# Gospel Scholar Agent Configuration
# ==================================================

# Supabase Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Bible API Keys (Get free keys from respective platforms)
# Bible.org API - https://scripture.api.bible/
BIBLE_ORG_API_KEY=your_bible_org_api_key

# ESV API - https://api.esv.org/
ESV_API_KEY=your_esv_api_key

# Bible Gateway (if available)
BIBLE_GATEWAY_API_KEY=your_bible_gateway_key

# Scholar Agent Settings
DEFAULT_TRANSLATION=NIV
VALIDATION_THRESHOLD=70
MAX_CONCURRENT_REQUESTS=5
ENABLE_THEOLOGICAL_VALIDATION=true
ENABLE_CROSS_REFERENCE_CHECK=true

# Reporting
OUTPUT_DIR=./output
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_SQL_FIXES=true
